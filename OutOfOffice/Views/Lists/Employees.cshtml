@model List<Employee>
@{
    ViewData["Title"] = "Employee";
}

<div>
    <h1>Employees:</h1>
    @if (Model.Count<1)
    {
        <h3>List empty</h3>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Full name</th>
                    <th scope="col">Subdivision</th>
                    <th scope="col">Position</th>
                    <th scope="col">Status</th>
                    <th scope="col">Partner</th>
                    <th scope="col">Out of office balance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <th scope="row">@employee.Id</th>
                        <td>@employee.FullName</td>
                        <td>@employee.Subdivision.ToString()</td>
                        <td>@employee.Position.ToString()</td>
                        <td>@employee.Status.ToString()</td>
                        <td>@(employee.PeoplePartner?.FullName ?? "No Partner")</td>
                        <td>@employee.OutOfOfficeBalance</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
